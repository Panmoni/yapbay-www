                formats={["avif", "webp"]}
                class="w-full h-full object-cover bg-white rounded transition group-hover:-translate-y-1 group-hover:shadow-xl"
              />
            </div>

            <div class="mt-4 text-center">
              <h2 class="text-lg text-neutral-800">{teamMemberEntry.data.name}</h2>
              <h3 class="text-sm text-neutral-500">
