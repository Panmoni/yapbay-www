---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import RoadmapCard from "@components/roadmap-card.astro";

---

<Layout title="Roadmap">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Roadmap</Fragment>
      <Fragment slot="desc">
        Our development timeline and upcoming features for YapBay. This assumes no outside funding.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 my-24 gap-x-10 gap-y-24">

      <RoadmapCard
        quarter="Q3 2025"
        status="in-progress"
        title="Deploy MVP on Solana Mainnet"
        description="Make some updates and deploy on Solana mainnet."
        progress={70}
      />

      <RoadmapCard
        quarter="Q3 2025"
        status="in-progress"
        title="Get Public Feedback on MVP"
        description="Do detailed UX testing with 20+ community traders and identify action items."
        progress={10}
      />



      <RoadmapCard
        quarter="Q3 2025"
        status="in-progress"
        title="Add Post-MVP Features"
        description="Add payment methods, chat, better pricing, more notifs, leg2 and fixes."
        progress={10}
      />

      <RoadmapCard
        quarter="Q4 2025"
        status="planned"
        title="Build First 2 Corridors"
        description="Achieve 100 transactions via a focus on VE and NG thru email, vertical video & X."
        progress={10}
      />

      <RoadmapCard
        quarter="Q4 2025"
        status="planned"
        title="Launch Trust Features"
        description="Add trusted/blocked traders, Civic integration, localization, tiered rep and trust network MVP."
      />

       <RoadmapCard
        quarter="Q1 2026"
        status="planned"
        title="Trader Referral Program"
        description="Build a viral trader referral program, if it makes sense and implement 1% fee."
      />

      <RoadmapCard
        quarter="Q1 2026"
        status="planned"
        title="Build Quick-Remit Widget"
        description="Build an AI widget to facilitate remittances based on user preferences."
      />

      <RoadmapCard
        quarter="Q2 2026"
        status="planned"
        title="Achieve 10,000 Transactions"
        description="Host meetups, track leads and grow the user base via AMAs and talks."
      />

      <RoadmapCard
        quarter="Q2 2026"
        status="planned"
        title="Combo Remittances"
        description="Develop a marketplace of good & services in selected corridors."
      />

      <RoadmapCard
        quarter="Q3 2026"
        status="planned"
        title="Smart Contract Audit"
        description="Have the smart contracts audited at a reasonable price."
      />
    </div>

    <div class="mt-32 mb-24">
      <h2 class="text-3xl font-bold text-center mb-16">Completed Items</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-10 gap-y-24">

      <RoadmapCard
        quarter="Q2 2025"
        status="completed"
        title="Build MVP on Celo L2"
        description="Build a new MVP (contracts, API, frontend, pricing) & deploy on Alfajores."
        progress={100}
      />

      <RoadmapCard
        quarter="Q2 2025"
        status="completed"
        title="Deploy to Celo L2 Mainnet"
        description="Deploy a public beta to Celo mainnet with a 100 USDC trade limit."
        progress={100}
      />

      </div>
    </div>

    <!-- Postponed Items Section -->
    <div class="mt-32 mb-24">
      <h2 class="text-3xl font-bold text-center mb-16">Postponed Items</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-10 gap-y-24">
        <RoadmapCard
          quarter=""
          status="postponed"
          title="Build MVP on Sui"
          description="Build an MVP on Sui using Move as part of the Overflow hackathon."
          progress={70}
        />
      </div>
    </div>
  </Container>
</Layout>