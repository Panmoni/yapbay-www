---
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import SolanaLogo from "../assets/solana.svg";

const { margin } = Astro.props;

const footermenu = {
  company: [
    {
      title: "About",
      path: "/about",
    },
    {
      title: "Blog",
      path: "/blog",
    },
    {
      title: "Contact",
      path: "/contact",
    },
  ],
  product: [
    {
      title: "Roadmap",
      path: "/roadmap",
    },
  ],
  resources: [

  ],
};
---

<footer
  class:list={[
    "py-14 bg-neutral-100 border-t border-neutral-100",
    margin && "mt-10",
  ]}>
  <Container>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      <div class="sm:col-span-2 md:col-span-3 lg:col-span-2">
        <a href="/" class="text-lg flex items-center"
          ><span class="font-bold text-primary-600">Yap</span><span
            class="text-neutral-600">Bay</span
          >
          <span
            class="uppercase mt-0.5 leading-none text-[10px] ml-1 font-bold bg-neutral-200 text-neutral-700 px-2 py-1 rounded-md"
            >MVP Soon</span
          >
        </a>
        <p class="mt-4 text-sm text-neutral-700 max-w-xs">
          Fast, low-cost, P2P, Web3 remittances for the global south
        </p>
        <div class="flex gap-3 mt-4 items-center">
          <a
            href="https://x.com/yapbay_"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-neutral-200 hover:bg-neutral-300 rounded w-6 h-6 inline-flex items-center justify-center text-neutral-500">
            <Icon name="bx:bxl-twitter" class="w-4 h-4" />
            <span class="sr-only">Twitter or X</span></a
          >
          <a
            href="https://t.me/Panmoni/288"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-neutral-200 hover:bg-neutral-300 rounded w-6 h-6 inline-flex items-center justify-center text-neutral-500">
            <Icon name="bx:bxl-telegram" class="w-4 h-4" /><span
              class="sr-only">Telegram</span
            ></a
          >
          <a
            href="https://github.com/Panmoni/yapbay"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-neutral-200 hover:bg-neutral-300 rounded w-6 h-6 inline-flex items-center justify-center text-neutral-500">
            <Icon name="bx:bxl-github" class="w-4 h-4" /><span
              class="sr-only">GitHub</span
            ></a
          >
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-neutral-800">Company</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.company.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-neutral-600 hover:text-primary-600">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-neutral-800">Product</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.product.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-neutral-600 hover:text-primary-600">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-neutral-800">Resources</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.resources.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-neutral-600 hover:text-primary-600">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Container>

  <div class="mt-14 pt-8 px-5 border-t border-neutral-200">
    <Container>
      <p class="text-center text-sm text-neutral-600 [text-wrap:balance]">
        Copyright © 2023-{new Date().getFullYear()}. A <a target="_blank" href="https://panmoni.com">Panmoni</a> project.
      </p>
      <p class="text-center text-sm text-netural-600 [text-wrap:balance] mt-2"><a href="mailto:hello@yapbay.com">hello@yapbay.com</a></p>
      <p class="text-center text-sm text-neutral-600 mt-4">
        Powered by<br />
        <Picture
          formats={["avif", "webp"]}
          src={SolanaLogo}
          alt="Solana Logo"
          class="w-48 max-w-md mx-auto mt-2 mb-4"
          loading="lazy"
        />
      </p>
      <p class="text-center text-xs text-neutral-600 mt-2">
        <a href="/terms" class="hover:text-primary-500"> Terms</a> ・ <a
          href="/privacy"
          class="hover:text-primary-500">
          Privacy</a
        >
      </p>
    </Container>
  </div>
</footer>
